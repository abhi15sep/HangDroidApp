<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.beginners.hangdroid.MultiplayerActivity"
    android:background="@drawable/gradient_background">

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:maxLength="10"
        android:id="@+id/editTextWord"
        android:hint="Introduce Word"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:maxLength="10"
        android:id="@+id/editP1"
        android:hint="Player 1"
        android:layout_above="@+id/editP2"
        android:layout_alignLeft="@+id/editP2"
        android:layout_alignStart="@+id/editP2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextWord"
        android:onClick="startMultiGame"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Play"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:maxLength="10"
        android:id="@+id/editP2"
        android:hint="Player 2"
        android:layout_above="@+id/editTextWord"
        android:layout_alignLeft="@+id/editTextWord"
        android:layout_alignStart="@+id/editTextWord" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Enter a word for your opponent!"
        android:id="@+id/textView7"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp" />


</RelativeLayout>
